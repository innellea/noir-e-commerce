{
    "name": "noir-server",
    "version": "1.0.0",
    "scripts": {
        "client": "cd client && npm start",
        "server": "nodemon server.js",
        "build": "cd client && npm run build ",
        "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
        "start": "node server.js",
        "heroku-postbuild": "cd client && npm install --force && npm install --force --no-shrinkwrap && npm run build"
    },
    "dependencies": {
        "body-parser": "1.19.0",
        "compression": "1.7.4",
        "cors": "2.8.5",
        "dotenv": "10.0.0",
        "express": "4.17.1",
        "express-sslify": "1.2.0",
        "helmet": "4.6.0",
        "node-fetch": "2.6.1",
        "stripe": "8.173.0"
    },
    "devDependencies": {
        "concurrently": "6.2.1",
        "nodemon": "2.0.12"
    }
}
